{
  "version": "1.2",
  "page": "student-home.html",
  "scope": "Student landing page after login/direct open. Locks layout, tokens, data bindings, routing, and PI 3√ó3 schema including School.",
  "tokens": {
    "bg": "#FFB6C1",
    "surface": "#ffffff",
    "ink": "#1f2937",
    "muted": "#6b7280",
    "accent": "#FFD700",
    "accent_hover": "#FFC300",
    "danger": "#ef4444",
    "soft": "#f8fafc",
    "ring": "#111827"
  },
  "assets": {
    "logo": "assets/mindmaster-logo.png",
    "mimi_gif": "assets/images/mimi.gif"
  },
  "layout": {
    "container": {
      "class": "app",
      "max_width": 1000,
      "padding": 18,
      "background": "surface",
      "radius": 24
    },
    "grid": {
      "columns_desktop": [
        3,
        1.3
      ],
      "gap": 16,
      "collapse_breakpoint_px": 900
    },
    "header": {
      "avatar": {
        "size": 56,
        "radius": 14
      },
      "logo_height_px": 72,
      "greeting_h1_clamp_px": [
        20,
        28
      ]
    }
  },
  "components": {
    "resume_card": {
      "ring": {
        "size_px": 176,
        "center_text_px": 26
      },
      "title_px": 21,
      "subtext_px": 14,
      "streak_badges": {
        "badges_size_px": 44,
        "panels": 2
      }
    },
    "mimi_rhs": {
      "container_class": "rhs",
      "img_class": "mimi",
      "align": "top-right"
    },
    "pi_card": {
      "grid": {
        "columns": 3,
        "min_column_px": 160,
        "gap_row_px": 5,
        "gap_col_px": 10
      },
      "label_px": 11,
      "value_px": 13,
      "padding": [
        7,
        9
      ],
      "fields_order": [
        {
          "id": "pi-first",
          "label": "first name:"
        },
        {
          "id": "pi-last",
          "label": "last name:"
        },
        {
          "id": "pi-username",
          "label": "username:"
        },
        {
          "id": "pi-password",
          "label": "password:"
        },
        {
          "id": "pi-class",
          "label": "class:"
        },
        {
          "id": "pi-school",
          "label": "school:"
        },
        {
          "id": "pi-gender",
          "label": "Gender (M/F):"
        },
        {
          "id": "pi-curriculum",
          "label": "Curriculum:"
        },
        {
          "id": "pi-age",
          "label": "Age:"
        }
      ]
    },
    "actions": {
      "buttons": [
        {
          "id": null,
          "title": "ü§ñ AI personalized tutor",
          "enabled": false
        },
        {
          "id": "btn-start-learning",
          "title": "‚ñ∂Ô∏è Start learning",
          "enabled": true,
          "href_from_db": true
        },
        {
          "id": null,
          "title": "üë©‚Äçüè´ I need my teacher",
          "enabled": false
        }
      ]
    }
  },
  "data": {
    "embedded_db_element_id": "embedded-user-db",
    "schema": {
      "students": {
        "id": "string",
        "firstName": "string",
        "lastName": "string",
        "username": "string",
        "password": "string",
        "school": "string",
        "className": "string",
        "curriculum": "string",
        "gender": "string",
        "age": "number"
      }
    },
    "normalization_map": {
      "first": "firstName",
      "last": "lastName",
      "username": "username",
      "password": "password",
      "school": "school",
      "class": "className",
      "gender": "gender",
      "age": "age",
      "curriculum": "curriculum"
    },
    "selection_precedence": [
      "URLSearchParams.username (case-insensitive)",
      "localStorage.mmUsername",
      "default S003 (kittisak)"
    ]
  },
  "routing": {
    "policy": "DB-driven",
    "start_button_targets": "value of student.curriculum",
    "current_curriculum_filename": "curriculum-Y01.html",
    "override_script_present": false
  },
  "accessibility": {
    "regions": [
      {
        "role": "region",
        "aria-label": "Student Home"
      },
      {
        "group": "actions-grid",
        "aria-label": "Main actions"
      },
      {
        "group": "badges",
        "aria-label": "Recent badges"
      }
    ],
    "progress_ring": {
      "role": "img",
      "aria-label": "Progress ring"
    }
  },
  "responsive": {
    "grid_collapse_px": 900,
    "actions_stack_px": 680,
    "streak_badges_stack_px": 560
  },
  "acceptance": [
    "Header logo = 72px tall; avatar 56px.",
    "Progress ring = 176px with 26px center text.",
    "Mimi GIF appears in RHS column, top-right aligned.",
    "PI shows 9 fields in a 3√ó3 grid, including School populated from DB.",
    "Start Learning follows DB (curriculum-Y01.html).",
    "No runtime override exists for Start button."
  ],
  "changelog": [
    {
      "version": "1.2",
      "delta": "PI schema 3√ó3; School added; DB-driven routing affirmed; Mimi anchored RHS."
    },
    {
      "version": "1.1",
      "delta": "Snapshot to current build; RHS previously blank."
    }
  ]
}